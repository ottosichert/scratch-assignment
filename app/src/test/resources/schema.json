            "symbols" : {
              "type" : "object",
              "additionalProperties" : {
                "type" : "integer"
              }
            }
          },
          "required" : [ "symbols" ],
          "additionalProperties" : false
        },
        "standard_symbols" : {
          "type" : "array",
